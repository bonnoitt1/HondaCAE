<%= form_for(@testfile, :html => {:multipart => true}) do |f| %>
  <% if @testfile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@testfile.errors.count, "error") %> prohibited this testfile from being saved:</h2>

      <ul>
      <% @testfile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :mat_name %><br>
    <%= f.text_field :mat_name %>
  </div>
  <div class="field">
    <%= f.label :group %><br>
    <%= f.text_field :group %>
  </div>
  <div class="field">
    <%= f.label :mat_type %><br>
    <%= f.text_field :mat_type %>
  </div>
  <div class="field">
    <%= f.label :filename %><br>
    <%= f.file_field :filename %>
  </div>
  <div class="field">
    <%= f.label :uploaded_by %><br>
    <%= f.text_field :uploaded_by %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
