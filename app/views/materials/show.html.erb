    <tr>
      <th>Filename</th>
      <th>Material Name</th>
      <th>Material Type</th>
      <th>Material ID</th>
      <th>Group Name</th>
      <th>Uploaded by</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
      <th></th>
      <th></th>
